// schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Location {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String   @unique
  description String   @default("")
  img         String   @default("")
  coordinates Coordinates

  @@map("locations")
}

type Coordinates {
  latitude  String
  longitude String
}
